{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://autovideo.example.com/schemas/checkpoint-phase1.json",
  "title": "Phase 1 Checkpoint: Segmentation",
  "description": "Checkpoint schema for Phase 1 (Segmentation) containing extracted video segments",
  "type": "object",
  "required": [
    "phase",
    "timestamp",
    "input_video_path",
    "pipeline_version",
    "phase_duration_seconds",
    "segments",
    "total_segments",
    "sample_rate_fps"
  ],
  "properties": {
    "phase": {
      "type": "integer",
      "const": 1,
      "description": "Phase number (always 1 for segmentation)"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp when checkpoint was created"
    },
    "input_video_path": {
      "type": "string",
      "minLength": 1,
      "description": "Absolute path to source video file"
    },
    "pipeline_version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Semantic version of pipeline (e.g., 1.0.0)"
    },
    "phase_duration_seconds": {
      "type": "number",
      "minimum": 0,
      "description": "Time taken to complete this phase in seconds"
    },
    "segments": {
      "type": "array",
      "minItems": 1,
      "description": "Array of extracted segments (partial data - no scores yet)",
      "items": {
        "type": "object",
        "required": ["segment_id", "start_time", "end_time", "duration"],
        "properties": {
          "segment_id": {
            "type": "string",
            "format": "uuid",
            "description": "Unique identifier for segment"
          },
          "start_time": {
            "type": "number",
            "minimum": 0,
            "description": "Start timestamp in seconds"
          },
          "end_time": {
            "type": "number",
            "minimum": 0,
            "description": "End timestamp in seconds"
          },
          "duration": {
            "type": "number",
            "minimum": 5.0,
            "maximum": 15.0,
            "description": "Segment duration in seconds (5-15 sec per FR-002)"
          }
        }
      }
    },
    "total_segments": {
      "type": "integer",
      "minimum": 1,
      "description": "Total count of segments extracted"
    },
    "sample_rate_fps": {
      "type": "number",
      "minimum": 0.1,
      "maximum": 60.0,
      "description": "Frame sampling rate used for analysis (frames per second)"
    }
  }
}
