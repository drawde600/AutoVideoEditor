{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://autovideo.example.com/schemas/checkpoint-phase3.json",
  "title": "Phase 3 Checkpoint: Assembly",
  "description": "Checkpoint schema for Phase 3 (Assembly) containing selected segments and ordering",
  "type": "object",
  "required": [
    "phase",
    "timestamp",
    "input_video_path",
    "pipeline_version",
    "phase_duration_seconds",
    "selected_segments",
    "target_duration",
    "actual_duration",
    "selection_algorithm"
  ],
  "properties": {
    "phase": {
      "type": "integer",
      "const": 3,
      "description": "Phase number (always 3 for assembly)"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp when checkpoint was created"
    },
    "input_video_path": {
      "type": "string",
      "minLength": 1,
      "description": "Absolute path to source video file"
    },
    "pipeline_version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Semantic version of pipeline"
    },
    "phase_duration_seconds": {
      "type": "number",
      "minimum": 0,
      "description": "Time taken to complete this phase in seconds"
    },
    "selected_segments": {
      "type": "array",
      "minItems": 1,
      "description": "Ordered list of segment IDs to include in highlight reel (chronological per FR-012)",
      "items": {
        "type": "string",
        "format": "uuid"
      }
    },
    "target_duration": {
      "type": "number",
      "minimum": 0,
      "exclusiveMinimum": true,
      "description": "User-specified target duration in seconds (FR-031)"
    },
    "actual_duration": {
      "type": "number",
      "minimum": 0,
      "exclusiveMinimum": true,
      "description": "Actual total duration of selected segments in seconds"
    },
    "selection_algorithm": {
      "type": "string",
      "enum": ["greedy_variety", "knapsack", "manual"],
      "description": "Algorithm used for segment selection"
    },
    "variety_score": {
      "type": "number",
      "minimum": 0.0,
      "maximum": 1.0,
      "description": "Measure of temporal distribution (0=all from one region, 1=evenly distributed)"
    }
  }
}
